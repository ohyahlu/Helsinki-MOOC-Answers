eat = float(input("How many times a week do you eat at the student cafeteria? "))
price = float(input("The price of a typical student lunch? "))
grocery = float(input("How much money do you spend on groceries in a week? "))

week = eat * price + grocery
day = float(week) / 7

print("Average food expenditure:")
print(f"Daily: {day} euros")
print(f"Weekly: {week} euros")
